<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Proyecto_ExperienciaCine" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/claroscuro</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/oscuro</item>
        <item name="colorSecondaryVariant">@color/grisoscuro</item>
        <item name="colorOnSecondary">@color/grisclaro</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/oscuro</item>
    </style>
</resources>